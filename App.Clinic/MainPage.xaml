<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Clinic.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Manage Patients" Grid.Row="0" Clicked="Patients_Clicked"/>
            <Button Text="Manage Physicians" Grid.Row="1" Clicked="Physicians_Clicked" />
            <Button Text="Manage Appointments" Grid.Row="2" Clicked="Appointments_Clicked"/>
            <!-- New Button for Treatments -->
            <Button Text="Manage Treatments" Grid.Row="3" Clicked="Treatments_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
